<Window x:Class="DCO_Player.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:DCO_Player"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Splash" Height="450" Width="600">
    
    <Grid>
        <Image gif:ImageBehavior.RepeatBehavior="10x"
       gif:ImageBehavior.AnimatedSource="Images/Splash/Uond.gif" />
        <!--<Image Source="Images/Logo/Logo.png" Margin="244,170,241,193"/>-->
        <Label Foreground="#FF211d28" FontFamily="Calibri" FontSize="25" FontWeight="Bold" Margin="234,343,234,65" Background="{x:Null}">DCO Player</Label>
    </Grid>
</Window>
