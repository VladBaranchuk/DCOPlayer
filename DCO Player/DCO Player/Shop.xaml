<Page x:Class="DCO_Player.Shop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DCO_Player"
      mc:Ignorable="d" 
      d:DesignHeight="688" d:DesignWidth="1320"
      Title="Shop">

    <Grid>
        <ScrollViewer Margin="0,190,0,0">
            <Grid>
                <WrapPanel x:Name="WPS" HorizontalAlignment="Center"/>
            </Grid>
        </ScrollViewer>
        <Grid Height="190" VerticalAlignment="Top" Background="#202020">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="511*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Margin="64,13,10,0" Foreground="#AFAFAF" FontFamily="Calibri" FontSize="25" FontWeight="Bold" Grid.Column="0">Shop</Label>
            <StackPanel Grid.Column="0">
                <StackPanel Margin="64,64,10,0" >
                    <Label Foreground="#7E7E7E" FontFamily="Century Gothic" FontSize="10" Height="22">COUNTRY</Label>
                    <ComboBox x:Name="Country" Height="26" Background="{x:Null}" BorderBrush="{x:Null}" OpacityMask="{x:Null}" Foreground="{x:Null}" ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ComboBoxItem IsSelected="True">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="21"/>
                                <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">ALL COUNTRIES</TextBlock>
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="21" Source="Images/Icon/Albania.png"/>
                                <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">ALBANIA</TextBlock>
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Armenia.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">ARMENIA</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Austria.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">AUSTRIA</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Belarus.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">BELARUS</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Belgium.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">BELGIUM</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Bosnia_and_Herzegovina.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">BOSNIA AND HERZEGOVINA</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Bulgaria.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">BULGARIA</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Croatia.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">CROATIA</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Czech_Republic.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">CZECH REPUBLIC</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="20" Source="Images/Icon/Denmark.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">DENMARK</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Estonia.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">ESTONIA</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/Finland.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">FINLAND</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                            <Image Width="23" Source="Images/Icon/France.png"/>
                            <TextBlock Margin="10,0,0,0" Foreground="#FF464646" FontFamily="Century Gothic" FontSize="12" Padding="3">FRANCE</TextBlock>
                        </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="23" Source="Images/Icon/Germany.png"/>
